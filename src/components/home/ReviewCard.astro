---

interface Props {
    title: string;
    text: string;
    stars: number;
}

const { stars, title, text }: Props = Astro.props;

---

<div class="flex flex-col flex-shrink-0 max-w-sm mr-4 lg:mx-4 p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
    <div class="w-full flex flex-row justify-between items-center">
        <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{title}</h5>
        <div class="flex flex-1 justify-end flex-row">
            {Array(stars).fill(0).map(() => <span class="text-yellow-400 text-xl">&#9733;</span>)}
        </div>
    </div>
    <p class="font-normal text-gray-700 dark:text-gray-400">{text}</p>
</div>