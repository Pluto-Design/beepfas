---

import Layout from "../layouts/Layout.astro";
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---


<Layout title="Page not found!">
    <section class="w-full px-4 h-screen flex-col justify-center items-center flex">
        <h1 class="text-2xl md:text-4xl text-center">Error 404 - {t("error.pageNotFound")}</h1>
        <a href={lang ? `/${lang}/` : "/"} class="text-blue-500 cursor-pointer underline text-xl md:text-3xl text-center">{t("error.backToHome")}</a>
    </section>
</Layout>